@model ChoirSubscriptionManager.Web.Models.ViewModels.ReportsIndexViewModel

@{
    ViewData["Title"] = "Reportes y EstadÃ­sticas";
}

<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>ðŸ“Š Reportes y EstadÃ­sticas</h2>
        <div class="text-muted">
            <small>Generado el: @Model.GeneratedAt.ToString("dd/MM/yyyy HH:mm")</small>
        </div>
    </div>

    <!-- Resumen Ejecutivo -->
    <div class="row mb-4">
        <div class="col-xl-3 col-md-6 mb-3">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                Miembros Activos
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.ActiveMembers</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-users fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-3">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                Suscripciones Activas
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.ActiveSubscriptions</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-calendar-check fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-3">
            <div class="card border-left-info shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                Ingresos del Mes
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">â‚¬@Model.MonthlyRevenue.ToString("N2")</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-euro-sign fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-3">
            <div class="card border-left-warning shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                Ingresos Totales
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">â‚¬@Model.TotalRevenue.ToString("N2")</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-chart-line fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- GrÃ¡ficos y EstadÃ­sticas -->
    <div class="row">
        <!-- DistribuciÃ³n por Roles -->
        <div class="col-xl-4 col-lg-6 mb-4">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">ðŸŽµ DistribuciÃ³n por Roles</h6>
                </div>
                <div class="card-body">
                    <canvas id="rolesChart" width="100%" height="150"></canvas>
                    <div class="mt-3">
                        @foreach (var role in Model.MembersByRole)
                        {
                            <div class="d-flex justify-content-between">
                                <span class="small">@role.Key:</span>
                                <span class="small font-weight-bold">@role.Value</span>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Tipos de Suscripciones -->
        <div class="col-xl-4 col-lg-6 mb-4">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">ðŸ“‹ Tipos de Suscripciones</h6>
                </div>
                <div class="card-body">
                    <canvas id="subscriptionsChart" width="100%" height="150"></canvas>
                    <div class="mt-3">
                        @foreach (var subscription in Model.SubscriptionsByType)
                        {
                            <div class="d-flex justify-content-between">
                                <span class="small">@subscription.Key:</span>
                                <span class="small font-weight-bold">@subscription.Value</span>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Estado de Pagos -->
        <div class="col-xl-4 col-lg-12 mb-4">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">ðŸ’³ Estado de Pagos</h6>
                </div>
                <div class="card-body">
                    <div class="chart-pie pt-4">
                        <canvas id="paymentsChart" width="100%" height="150"></canvas>
                    </div>
                    <div class="mt-3">
                        <div class="d-flex justify-content-between">
                            <span class="small text-success">Completados:</span>
                            <span class="small font-weight-bold">@Model.CompletedPayments</span>
                        </div>
                        <div class="d-flex justify-content-between">
                            <span class="small text-warning">Pendientes:</span>
                            <span class="small font-weight-bold">@Model.PendingPayments</span>
                        </div>
                        <div class="d-flex justify-content-between">
                            <span class="small text-danger">Fallidos:</span>
                            <span class="small font-weight-bold">@Model.FailedPayments</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- GrÃ¡fico de Ingresos Mensuales -->
    <div class="row">
        <div class="col-12 mb-4">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">ðŸ“ˆ Ingresos de los Ãšltimos 6 Meses</h6>
                </div>
                <div class="card-body">
                    <canvas id="revenueChart" width="100%" height="80"></canvas>
                </div>
            </div>
        </div>
    </div>

    <!-- Enlaces a Reportes Detallados -->
    <div class="row">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">ðŸ“‘ Reportes Detallados</h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-3 mb-3">
                            <a href="@Url.Action("MemberDetails")" class="btn btn-outline-primary btn-block">
                                <i class="fas fa-users"></i><br>
                                Detalles de Miembros
                            </a>
                        </div>
                        <div class="col-md-3 mb-3">
                            <a href="@Url.Action("PaymentDetails")" class="btn btn-outline-success btn-block">
                                <i class="fas fa-money-bill-wave"></i><br>
                                Historial de Pagos
                            </a>
                        </div>
                        <div class="col-md-3 mb-3">
                            <a href="@Url.Action("ExpiredSubscriptions")" class="btn btn-outline-warning btn-block">
                                <i class="fas fa-calendar-times"></i><br>
                                Suscripciones Vencidas
                            </a>
                        </div>
                        <div class="col-md-3 mb-3">
                            <a href="@Url.Action("UpcomingRenewals")" class="btn btn-outline-info btn-block">
                                <i class="fas fa-calendar-alt"></i><br>
                                PrÃ³ximas Renovaciones
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // GrÃ¡fico de distribuciÃ³n por roles
        const rolesCtx = document.getElementById('rolesChart').getContext('2d');
        new Chart(rolesCtx, {
            type: 'doughnut',
            data: {
                labels: [@Html.Raw(string.Join(",", Model.MembersByRole.Keys.Select(k => $"'{k}'")))],
                datasets: [{
                    data: [@string.Join(",", Model.MembersByRole.Values)],
                    backgroundColor: ['#4e73df', '#1cc88a', '#36b9cc', '#f6c23e', '#e74a3b'],
                    borderWidth: 2
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        display: false
                    }
                }
            }
        });

        // GrÃ¡fico de tipos de suscripciones
        const subscriptionsCtx = document.getElementById('subscriptionsChart').getContext('2d');
        new Chart(subscriptionsCtx, {
            type: 'bar',
            data: {
                labels: [@Html.Raw(string.Join(",", Model.SubscriptionsByType.Keys.Select(k => $"'{k}'")))],
                datasets: [{
                    data: [@string.Join(",", Model.SubscriptionsByType.Values)],
                    backgroundColor: '#1cc88a',
                    borderColor: '#1cc88a',
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        display: false
                    }
                },
                scales: {
                    y: {
                        beginAtZero: true,
                        ticks: {
                            stepSize: 1
                        }
                    }
                }
            }
        });

        // GrÃ¡fico de estado de pagos
        const paymentsCtx = document.getElementById('paymentsChart').getContext('2d');
        new Chart(paymentsCtx, {
            type: 'pie',
            data: {
                labels: ['Completados', 'Pendientes', 'Fallidos'],
                datasets: [{
                    data: [@Model.CompletedPayments, @Model.PendingPayments, @Model.FailedPayments],
                    backgroundColor: ['#1cc88a', '#f6c23e', '#e74a3b'],
                    borderWidth: 2
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        display: false
                    }
                }
            }
        });

        // GrÃ¡fico de ingresos mensuales
        const revenueCtx = document.getElementById('revenueChart').getContext('2d');
        new Chart(revenueCtx, {
            type: 'line',
            data: {
                labels: [@Html.Raw(string.Join(",", Model.MonthlyRevenueData.Keys.Select(k => $"'{k}'")))],
                datasets: [{
                    label: 'Ingresos (â‚¬)',
                    data: [@string.Join(",", Model.MonthlyRevenueData.Values)],
                    borderColor: '#4e73df',
                    backgroundColor: 'rgba(78, 115, 223, 0.1)',
                    borderWidth: 2,
                    fill: true
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                scales: {
                    y: {
                        beginAtZero: true,
                        ticks: {
                            callback: function(value) {
                                return 'â‚¬' + value.toFixed(2);
                            }
                        }
                    }
                }
            }
        });
    </script>
}
